@{
    var AspAction = ViewContext.RouteData.Values["action"].ToString();
    var classeMenu1 = AspAction == "Index" ? "active" : "";
    var classeMenu2 = AspAction == "Cadastro" ? "active" : "";
    var classeMenu3 = AspAction == "Arquivo" ? "active" : "";
}


<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SGI - @ViewData["Title"] </title>
    <!-- Inclua o link para o Bootstrap 5 (pode ser o link CDN) -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-icon/fontawesome-all.min.css">
</head>
<body>
    <!-- Menu de Navegação -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand"  asp-area="" asp-controller="Home" asp-action="Index">Minha Página</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link @classeMenu1"  asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Outro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @classeMenu2"  asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @classeMenu3"  asp-area="" asp-controller="Home" asp-action="Arquivo">Arquivos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

        @RenderBody()


	<!-- footer -->
    <footer class="footer position-relative py-2">
    <div class="container">
      <div class="midd-footer align-center py-2 mt-2">
        <p class="copy-footer text-center">© 2023 SIG. All rights reserved. Design by <a
            href="#">SIG</a></p>
      </div>
    </div>

    <!-- Inclua os scripts do Bootstrap no final do documento para um carregamento mais rápido -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

           
     
